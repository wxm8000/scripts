
// background
{
    "manifest_version": 2,

    "name": "VIPKID",
    "version": "1.0",
    "description": "Book class for Beck check every Monday 12:00",

    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        },
        "default_title": "Book class for Beck"
    },

    "background": {
        "scripts": ["js/checktime.js"]
    },
	
	"permissions" : ["tabs","http://*.vipkid.com.cn/*"]
}
